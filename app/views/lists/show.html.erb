
<div class="container">
<h1>This is the bookmarks from the list</h1>
<% @bookmarks.each do |bookmark| %>
  <li><%= bookmark.movie.title %>
<%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</li>
<% end %>

<h2>Add a Bookmark</h2>

<%= simple_form_for [@list, Bookmark.new] do |f| %>
  <%= f.input :movie_id, collection: Movie.all %>
  <%= f.input :comment %>
  <%= f.submit %>
<% end %>
</div>
